<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Greetings" Height="450" Width="800">
    <Grid>
        <Label Content="Menedżer haseł" HorizontalAlignment="Center" Margin="0,71,0,0" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" FontSize="16"/>
        <Button Content="Wybierz" HorizontalAlignment="Center" Margin="0,307,0,0" VerticalAlignment="Top" Height="31" Width="124" Click="Button_Click"/>
        <Label Content="Login:" HorizontalAlignment="Left" Height="28" Margin="117,143,0,0" VerticalAlignment="Top" Width="42"/>
        <Label Content="Hasło:" HorizontalAlignment="Left" Height="27" Margin="117,176,0,0" VerticalAlignment="Top" Width="42"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Height="28" Margin="184,182,0,0" VerticalAlignment="Top" Width="325" RenderTransformOrigin="0.5,0.5">
            <PasswordBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.158"/>
                    <TranslateTransform/>
                </TransformGroup>
            </PasswordBox.RenderTransform>
        </PasswordBox>
        <TextBox x:Name="txtLogin" HorizontalAlignment="Left" Height="22" Margin="183,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="327"/>
        <Button x:Name="openRegisterWindow" Content="Dodaj nowego użytkownika" HorizontalAlignment="Left" Height="66" Margin="595,322,0,0" VerticalAlignment="Top" Width="156" Click="OpenRegisterWindow_Click"/>

    </Grid>
</Window>
