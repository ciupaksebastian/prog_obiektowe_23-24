<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Rejestracja" Height="450" Width="800">
    <Grid>
        <Label Content="Dodaj nowego użytkownika" HorizontalAlignment="Left" Height="50" Margin="130,21,0,0" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="txtLoginReg" HorizontalAlignment="Left" Margin="149,90,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="237"/>
        <Label Content="Login" HorizontalAlignment="Left" Height="30" Margin="57,81,0,0" VerticalAlignment="Top" Width="87"/>
        <Label Content="Hasło" HorizontalAlignment="Left" Height="35" Margin="57,111,0,0" VerticalAlignment="Top" Width="127"/>
        <Label Content="Powtórz hasło" HorizontalAlignment="Left" Height="35" Margin="57,146,0,0" VerticalAlignment="Top" Width="127"/>
        <PasswordBox x:Name="txtPasswordReg" HorizontalAlignment="Left" Height="20" Margin="149,121,0,0" VerticalAlignment="Top" Width="221"/>
        <PasswordBox x:Name="txtPasswordRegRep" HorizontalAlignment="Left" Height="18" Margin="149,150,0,0" VerticalAlignment="Top" Width="221"/>
        <Button x:Name="register" Content="Zarejestruj" Click="RegisterUser_Click" HorizontalAlignment="Left" Height="68" Margin="228,249,0,0" VerticalAlignment="Top" Width="255"/>

    </Grid>
</Window>
